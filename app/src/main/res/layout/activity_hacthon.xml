<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hacthonActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutheader"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/search_backside_background"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/hacth_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hackathons"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/about_hacth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:text="Let's learn about hacthons"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:layout_constraintEnd_toStartOf="@+id/hacth_text"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hacth_text"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutheader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hackathons"
                android:textStyle="bold"
                android:textAlignment="viewStart"
                android:textColor="@color/blue"
                android:textSize="20dp"
                android:fontFamily="@font/aclonica"/>

            <TextView
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/hackathon"
                android:textAlignment="viewStart"
                android:textColor="@color/blue"
                android:textSize="17dp"/>

            <TextView
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resources:"
                android:textStyle="bold"
                android:textAlignment="viewStart"
                android:textColor="@color/blue"
                android:textSize="20dp"
                android:fontFamily="@font/aclonica"/>

            <TextView
                android:id="@+id/h1"
                android:textStyle="bold"
                android:layout_marginStart="70dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/h1"
                android:textColor="#1520A6"
                android:textAlignment="viewStart"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/h2"
                android:layout_marginStart="70dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/h2"
                android:textColor="#1520A6"
                android:textStyle="bold"
                android:textAlignment="viewStart"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/h3"
                android:layout_marginStart="70dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/h3"
                android:textColor="#1520A6"
                android:textStyle="bold"
                android:textAlignment="viewStart"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/h4"
                android:layout_marginStart="70dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/h4"
                android:textColor="#1520A6"
                android:textStyle="bold"
                android:textAlignment="viewStart"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/h5"
                android:layout_marginStart="70dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/h5"
                android:textColor="#1520A6"
                android:textStyle="bold"
                android:textAlignment="viewStart"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/h6"
                android:layout_marginStart="70dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/h6"
                android:textColor="#1520A6"
                android:textStyle="bold"
                android:textAlignment="viewStart"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/h"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/h"
                android:textColor="@color/blue"
                android:textAlignment="viewStart"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>