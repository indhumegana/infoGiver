<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".techNewsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutheader"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/search_backside_background"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/news_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Technology News"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/about_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:text="Let's know the news"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:layout_constraintEnd_toStartOf="@+id/news_text"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/news_text"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutheader">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tech News"
        android:textStyle="bold"
        android:textAlignment="viewStart"
        android:textColor="@color/blue"
        android:textSize="20dp"
        android:fontFamily="@font/aclonica"/>

    <TextView
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="We will provide some resources where you can find the news about technology"
        android:textAlignment="viewStart"
        android:textColor="@color/blue"
        android:textSize="17dp"/>

    <TextView
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resources:"
        android:textStyle="bold"
        android:textAlignment="viewStart"
        android:textColor="@color/blue"
        android:textSize="20dp"
        android:fontFamily="@font/aclonica"/>

    <TextView
        android:id="@+id/tn1and2"
        android:layout_marginStart="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tn1and2"
        android:textColor="@color/blue"
        android:textAlignment="viewStart"
        android:textSize="20dp" />


        <TextView
            android:id="@+id/tn3"
            android:layout_marginStart="70dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tn3"
            android:textColor="#1520A6"
            android:textAlignment="viewStart"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tn4"
            android:layout_marginStart="70dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tn4"
            android:textColor="#1520A6"
            android:textAlignment="viewStart"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tn5"
            android:layout_marginStart="70dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tn5"
            android:textColor="#1520A6"
            android:textAlignment="viewStart"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tn6"
            android:layout_marginStart="70dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tn6"
            android:textColor="#1520A6"
            android:textAlignment="viewStart"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tn7"
            android:layout_marginStart="70dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tn7"
            android:textColor="#1520A6"
            android:textAlignment="viewStart"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tn8"
            android:layout_marginStart="70dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tn8"
            android:textColor="#1520A6"
            android:textAlignment="viewStart"
            android:textSize="20dp" />

    </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>